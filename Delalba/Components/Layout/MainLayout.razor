@inherits LayoutComponentBase
@using Delalba.Components.Pages.ModalesTienda

<div class="page">
    <div class="sidebar nav-yo-color">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4" style="color:green">
            @* <a href="https://learn.microsoft.com/aspnet/core/" target="_blank">About</a>
